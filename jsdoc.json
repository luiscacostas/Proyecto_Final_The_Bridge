{
  "source": {
    "include": ["controllers", "models", "routes", "services"],
    "includePattern": ".+\\.js(doc|x)?$",
    "excludePattern": "(^|\\/|\\\\)_"
  },
  "opts": {
    "destination": "./docs",
    "recurse": true,
    "template": "node_modules/better-docs"
  },
  "plugins": [
    "plugins/markdown"
  ],
  "templates": {
    "better-docs": {
      "name": "Token Go API Documentation",
      "logo": "path/to/your/logo.png",
      "css": "path/to/your/custom-styles.css"
    }
  }
}